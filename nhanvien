<body>
    <div class="container">
        <h2>Quản Lý Nhân Viên</h2>
        <div class="add-employee">
            <input type="text" id="employeeName" placeholder="Nhập tên nhân viên">
            <input type="text" id="workHours" placeholder="Nhập thời gian làm việc (giờ)">
            <button onclick="addEmployee()">Thêm</button>
        </div>
        <table class="employee-list">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên Nhân Viên</th>
                    <th>Thời Gian Làm Việc</th>
                    <th>công việc</th>
                </tr>
            </thead>
            <tbody id="employeeTableBody">
                <!-- Danh sách nhân viên sẽ được thêm vào đây -->
            </tbody>
        </table>
    </div>
    <script>
        let employeeId = 1;
        function addEmployee() {
            let name = document.getElementById('employeeName').value;
            let workHours = document.getElementById('workHours').value;
            if (name.trim() === '' || workHours.trim() === '') {
                alert('Vui lòng nhập đầy đủ thông tin nhân viên!');
                return;
            }
            let tableBody = document.getElementById('employeeTableBody');
            let row = tableBody.insertRow();
            row.innerHTML = `
                <td>${employeeId}</td>
                <td>${name}</td>
                <td>${workHours} giờ</td>
                <td class="actions">
                    <button onclick="editEmployee(this)"><i class="fa fa-edit"></i></button>
                    <button onclick="deleteEmployee(this)"><i class="fa fa-trash"></i></button>
                </td>
            `;
            employeeId++;
            document.getElementById('employeeName').value = '';
            document.getElementById('workHours').value = '';
        }
        function editEmployee(btn) {
            let row = btn.parentElement.parentElement;
            let nameCell = row.cells[1];
            let workHoursCell = row.cells[2];
            let newName = prompt('Chỉnh sửa tên nhân viên:', nameCell.innerText);
            let newWorkHours = prompt('Chỉnh sửa thời gian làm việc:', workHoursCell.innerText.replace(' giờ', ''));
            if (newName && newName.trim() !== '') {
                nameCell.innerText = newName;
            }
            if (newWorkHours && newWorkHours.trim() !== '') {
                workHoursCell.innerText = newWorkHours + ' giờ';
            }
        }
        function deleteEmployee(btn) {
            if (confirm('Bạn có chắc chắn muốn xóa nhân viên này?')) {
                let row = btn.parentElement.parentElement;
                row.remove();
            }
        }
    </script>
</body>
</html>
